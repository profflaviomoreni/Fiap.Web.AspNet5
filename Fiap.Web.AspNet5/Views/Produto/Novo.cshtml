@using Fiap.Web.AspNet5.ViewModel;
@model ProdutoNovoViewModel


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Produto</h2>
                
                <form asp-controller="Produto" asp-action="Novo" method="post">
                    <div class="form-group">
                        <label class="control-label">Nome:</label>
                        <input class="form-control col-5" asp-for="ProdutoNome" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Loja:</label>
                        <select multiple class="form-control col-5" asp-for="LojaId" asp-items="@Model.Lojas">
                        </select>
                    </div>

                    <a href="#" class="btn btn-default btn-lg">Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
                </form>


            </div>
        </div>
    </div>
</div>
