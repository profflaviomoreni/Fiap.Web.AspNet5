@using Fiap.Web.AspNet5.ViewModel;
@model ProdutoEditarViewModel



<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Produto</h2>

                @if (!String.IsNullOrEmpty((String)TempData["Mensagem"]))
                {
                    <div class="alert alert-warning" role="alert">@TempData["Mensagem"]</div>
                }

                <form asp-controller="Produto" asp-action="Edit" method="post">
                    <input class="form-control col-5" asp-for="ProdutoId" />
                    <div class="form-group">
                        <label class="control-label">Nome:</label>
                        <input class="form-control col-5" asp-for="ProdutoNome" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Loja:</label>
                        <select multiple class="form-control col-5" asp-for="LojaId" asp-items="@Model.Lojas">
                        </select>
                    </div>

                    <a asp-action="Index">Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
                </form>


            </div>
        </div>
    </div>
</div>
