@model IList<ClienteModel>

<h1>Clientes</h1>

@if (!String.IsNullOrEmpty((String)TempData["Mensagem"]))
{
    <div class="alert alert-warning" role="alert">@TempData["Mensagem"]</div>
}

<p class="toolbar">
    <a asp-controller="Cliente" asp-action="Novo" class="create btn btn-dark">Novo Cliente</a>
</p>

<div class="jumbotron">
    <form asp-action="Pesquisar">
        <div class="form-group">
            <label class="control-label">Nome</label>
            <input class="form-control col-5" name="ClienteNome" />
        </div>
        <div class="form-group">
            <label class="control-label">Email</label>
            <input class="form-control col-5" name="ClienteEmail" />
        </div>
        <div class="form-group">
            <label class="control-label">Representante</label>
            <select class="form-control col-5" name="RepresentanteId" asp-items="@ViewBag.Representantes">
                <option value="">Selecione</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Buscar</button>
    </form>
</div>
<hr />


@if ( Model.Count() > 0 ) {
<table class="table table-striped" border="1" cellspacing="0" cellpadding="0">
    <thead>
        <tr>
            <th data-field="id">Id</th>
            <th data-field="name">Nome</th>
            <th data-field="email">E-mail</th>
            <th data-field="representante">Representante</th>
            <th class="actions" width="220">Ações</th>
        </tr>
    </thead>
  
    <partial name="_ClienteItem" model="Model" />

</table>
}

    
