@model IList<ClienteModel>

<h1>Clientes</h1>

<p class="toolbar">
    <a class="create btn btn-dark">Novo Cliente</a>
</p>

<table class="table table-striped" border="1" cellspacing="0" cellpadding="0">
    <thead>
        <tr>
            <th data-field="id">Id</th>
            <th data-field="name">Nome</th>
            <th data-field="sobrenome">Sobrenome</th>
            <th class="actions" width="220">Ações</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var cliente in Model)
        {
        <tr>
            <td data-field="id">#@cliente.ClienteId</td>
            <td data-field="name">@cliente.Nome</td>
            <td data-field="sobrenome">@cliente.Email</td>
            <td class="actions" width="220">
                <a asp-controller="Cliente">Detalhe</a>
                <a asp-controller="Cliente">Editar</a>
                <a href="#">Remover</a>
            </td>
        </tr>
        }

        

    </tbody>
</table>